<h1>Portfolios</h1>

<%= link_to "Create new item", new_portfolio_path %>

<% @portfolio_items.each do |x| %>
    <p><%= link_to x.title, portfolio_path(x.id) %></p>
    <p><%= x.subtitle %></p>
    <p><%= x.body %></p>
    <%= image_tag x.thumb_image unless x.thumb_image.nil? %>
    <%= link_to "Edit", edit_portfolio_path(x.id) %>
<% end %>